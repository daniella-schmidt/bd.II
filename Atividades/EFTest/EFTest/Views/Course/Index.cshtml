@model ICollection<EFTest.Models.Course>
@{
    ViewData["Title"] = "Cursos";
}

<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@Model.Count cursos</h2>
        <a asp-controller="Course" asp-action="Create" class="btn btn-primary">
            Novo Curso
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Id</td>
                        <td>@c.Name</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-controller="Course"
                                   asp-action="Update"
                                   asp-route-id="@c.Id"
                                   class="btn btn-sm btn-warning">
                                    Editar
                                </a>

                                <form asp-controller="Course"
                                      asp-action="Delete"
                                      asp-route-id="@c.Id"
                                      method="post"
                                      class="d-inline"
                                      onsubmit="return confirm('Tem certeza que deseja excluir este curso?')">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        Excluir
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center mt-5">
            <p class="text-muted">Nenhum curso cadastrado.</p>
            <a asp-controller="Course" asp-action="Create" class="btn btn-primary">
                Cadastrar Primeiro Curso
            </a>
        </div>
    }
</div>