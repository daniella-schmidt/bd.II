@model EFTest.Models.Course
@{
    ViewData["Title"] = "Criar Curso";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>
                        Criar Novo Curso
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="fas fa-user me-1"></i>
                                Nome Completo
                            </label>
                            <input asp-for="Name"
                                   class="form-control form-control-lg"
                                   placeholder="Digite o nome do curso"
                                   autocomplete="name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-1"></i>
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-1"></i>
                                Salvar Curso
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 text-center">
        <small class="text-muted">
            <i class="fas fa-info-circle me-1"></i>
            Preencha todos os campos obrigatórios para criar um novo curso
        </small>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Adiciona validação visual em tempo real
        $(document).ready(function() {
            $('input').on('blur', function() {
                var input = $(this);
                if (input.val().length > 0) {
                    input.addClass('is-valid').removeClass('is-invalid');
                } else if (input.prop('required')) {
                    input.addClass('is-invalid').removeClass('is-valid');
                }
            });

            // Efeito de focus nos inputs
            $('input').focus(function() {
                $(this).parent().find('label').addClass('text-primary');
            }).blur(function() {
                $(this).parent().find('label').removeClass('text-primary');
            });

            // Auto-focus no primeiro campo
            $('input:first').focus();
        });
    </script>
}
