@model ICollection<EFTest.Models.StudentsCourses>
@{
    ViewData["Title"] = "Matrículas";
}

<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@Model.Count matrículas</h2>
        <a asp-controller="StudentCourses" asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-1"></i>
            Nova Matrícula
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Estudante</th>
                    <th>Curso</th>
                    <th>Data Matrícula</th>
                    <th>Status</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var matricula in Model)
                {
                    <tr>
                        <td>@matricula.Student?.FirstMidName</td>
                        <td>@matricula.Course?.Name</td>
                        <td>@matricula.SignDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (matricula.CancelDate.HasValue)
                            {
                                <span class="badge bg-danger">Cancelada</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Ativa</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (!matricula.CancelDate.HasValue)
                            {
                                <form asp-action="Cancel" method="post" class="d-inline"
                                      onsubmit="return confirm('Tem certeza que deseja cancelar esta matrícula?')">
                                    <input type="hidden" name="studentId" value="@matricula.StudentId" />
                                    <input type="hidden" name="courseId" value="@matricula.CourseId" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-times me-1"></i>
                                        Cancelar
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center mt-5">
            <p class="text-muted">Nenhuma matrícula encontrada.</p>
            <a asp-controller="StudentCourses" asp-action="Create" class="btn btn-primary">
                Cadastrar Primeiro Matricula
            </a>
        </div>
    }
</div>