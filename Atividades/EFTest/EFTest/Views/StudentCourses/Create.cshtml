@model EFTest.Models.StudentsCourses
@{
    ViewData["Title"] = "Nova Matrícula";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-graduation-cap me-2"></i>
                        Nova Matrícula
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="StudentId" class="form-label">
                                <i class="fas fa-user me-1"></i>
                                Estudante
                            </label>
                            @if (ViewBag.StudentId != null)
                            {
                                <select asp-for="StudentId" asp-items="ViewBag.StudentId" class="form-select form-select-lg">
                                    <option value="">Selecione um estudante</option>
                                </select>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    Nenhum estudante cadastrado. <a asp-controller="Home" asp-action="Create">Cadastrar estudante</a>
                                </div>
                            }
                            <span asp-validation-for="StudentId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CourseId" class="form-label">
                                <i class="fas fa-book me-1"></i>
                                Curso
                            </label>
                            <select asp-for="CourseId" asp-items="ViewBag.CourseId" class="form-select form-select-lg">
                                <option value="">Selecione um curso</option>
                            </select>
                            <span asp-validation-for="CourseId" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-1"></i>
                                Voltar
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check me-1"></i>
                                Matricular
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Validação dos selects
            $('select').on('change', function() {
                if ($(this).val()) {
                    $(this).addClass('is-valid').removeClass('is-invalid');
                } else {
                    $(this).addClass('is-invalid').removeClass('is-valid');
                }
            });
        });
    </script>
}