@model EFFloristry.Models.Product
@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2"></i>
                        Editar Produto
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Update" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        @* Campo oculto para o ID *@
                        <input asp-for="Id" type="hidden" />

                        <div class="mb-3">
                            <label asp-for="ProductDescription" class="form-label">
                                <i class="fas fa-leaf me-1"></i>
                                Descrição do Produto
                            </label>
                            <input asp-for="ProductDescription"
                                   class="form-control"
                                   placeholder="Ex: Rosa Vermelha, Orquídea Branca..." />
                            <span asp-validation-for="ProductDescription" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">
                                <i class="fas fa-dollar-sign me-1"></i>
                                Preço (R$)
                            </label>
                            <input asp-for="Price"
                                   type="number"
                                   step="0.01"
                                   min="0"
                                   class="form-control"
                                   placeholder="0,00" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label">
                                <i class="fas fa-tags me-1"></i>
                                Categoria
                            </label>
                            <select asp-for="Category" class="form-select">
                                <option value="">Selecione uma categoria</option>
                                <option value="Flores">Flores</option>
                                <option value="Plantas">Plantas</option>
                                <option value="Arranjos">Arranjos</option>
                                <option value="Vasos">Vasos</option>
                                <option value="Acessórios">Acessórios</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Stock" class="form-label">
                                <i class="fas fa-boxes me-1"></i>
                                Quantidade em Estoque
                            </label>
                            <input asp-for="Stock"
                                   type="number"
                                   min="0"
                                   class="form-control"
                                   placeholder="0" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning text-dark">
                                <i class="fas fa-save me-1"></i>
                                Atualizar Produto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Auto-focus no primeiro campo
            $('input:first').focus();

            // Formatação do campo de preço
            $('#Price').on('input', function() {
                let value = $(this).val();
                if (value && !isNaN(value)) {
                    $(this).removeClass('is-invalid').addClass('is-valid');
                }
            });

            // Validação em tempo real
            $('input, select').on('blur', function() {
                var field = $(this);
                if (field.val() && field.val().length > 0) {
                    field.addClass('is-valid').removeClass('is-invalid');
                }
            });
        });
    </script>
}

<style>
    .form-control:focus, .form-select:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
    }

    .btn-warning:hover {
        transform: translateY(-2px);
        transition: all 0.2s ease;
    }
</style>