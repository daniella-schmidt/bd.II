@model ICollection<EFFloristry.Models.Client>
@{
    ViewData["Title"] = "Clientes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-1">
                <i class="fas fa-users me-2"></i>
                Clientes
            </h2>
            <p class="text-muted mb-0">Total de <strong>@Model.Count</strong> clientes cadastrados</p>
        </div>
        <a asp-controller="Client" asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-2"></i>
            Novo Cliente
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-primary">
                            <tr>
                                <th>#</th>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Telefone</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var client in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@client.ClientId</td>
                                    <td>@client.Name</td>
                                    <td>@client.Email</td>
                                    <td>@client.PhoneNumber</td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-controller="Client" asp-action="Update" asp-route-id="@client.ClientId"
                                               class="btn btn-outline-warning">Editar</a>
                                            <form asp-controller="Client" asp-action="Delete" asp-route-id="@client.ClientId"
                                                  method="post" class="d-inline"
                                                  onsubmit="return confirm('Tem certeza que deseja excluir o cliente: @client.Name?')">
                                                <button type="submit" class="btn btn-outline-danger">Excluir</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted mb-3">Nenhum cliente cadastrado</h4>
                    <a asp-controller="Client" asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>
                        Cadastrar Primeiro Cliente
                    </a>
                </div>
            }
        </div>
    </div>
</div>