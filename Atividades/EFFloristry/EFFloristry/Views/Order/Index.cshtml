@model ICollection<EFFloristry.Models.Order>
@{
    ViewData["Title"] = "Pedidos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-info mb-1">
                <i class="fas fa-shopping-cart me-2"></i>
                Pedidos
            </h2>
            <p class="text-muted mb-0">Total de <strong>@Model.Count</strong> pedidos</p>
        </div>
        <a asp-controller="Order" asp-action="Create" class="btn btn-info btn-lg">
            <i class="fas fa-plus me-2"></i>
            Novo Pedido
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-info">
                            <tr>
                                <th>#</th>
                                <th>Data</th>
                                <th>Cliente</th>
                                <th>Descrição</th>
                                <th>Itens</th>
                                <th>Total</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@order.Id</td>
                                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                                    <td>@order.Client?.Name</td>
                                    <td>@order.Description</td>
                                    <td>@order.OrderItems.Count</td>
                                    <td class="fw-bold text-success">@order.Total.ToString("C")</td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-controller="Order" asp-action="Update" asp-route-id="@order.Id"
                                               class="btn btn-outline-warning">Editar</a>
                                            <form asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id"
                                                  method="post" class="d-inline"
                                                  onsubmit="return confirm('Tem certeza que deseja excluir este pedido?')">
                                                <button type="submit" class="btn btn-outline-danger">Excluir</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted mb-3">Nenhum pedido cadastrado</h4>
                    <a asp-controller="Order" asp-action="Create" class="btn btn-info btn-lg">
                        <i class="fas fa-plus me-2"></i>
                        Criar Primeiro Pedido
                    </a>
                </div>
            }
        </div>
    </div>
</div>