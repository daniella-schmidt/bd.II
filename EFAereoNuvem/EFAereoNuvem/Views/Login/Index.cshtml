@model EFAereoNuvem.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!-- Hero Section -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6" data-aos="fade-right">
                <div class="d-inline-flex align-items-center px-3 py-2 rounded-pill mb-3"
                     style="background: linear-gradient(135deg, var(--accent3), var(--accent2)); color: white;">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    <span class="fw-semibold">Acesso</span>
                </div>
                <h1 class="page-header mb-3">Bem-vindo de Volta</h1>
                <p class="lead text-muted mb-4">Faça login para acessar o sistema de gerenciamento aeronáutico</p>

                <div class="mt-5">
                    <div class="row g-3 text-center">
                        <div class="col-md-4">
                            <div class="feature-icon-sm">
                                <i class="fas fa-plane"></i>
                            </div>
                            <h6 class="mt-2 fw-semibold">Gestão de Voos</h6>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-icon-sm">
                                <i class="fas fa-users"></i>
                            </div>
                            <h6 class="mt-2 fw-semibold">Controle de Clientes</h6>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-icon-sm">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <h6 class="mt-2 fw-semibold">Relatórios</h6>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6" data-aos="fade-left" data-aos-delay="200">
                <div class="card">
                    <div class="card-header" style="background: linear-gradient(135deg, var(--primary), var(--secondary));">
                        <h5 class="card-title mb-0 text-white text-center">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <form asp-controller="Login" asp-action="Index" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-custom mb-4"></div>

                            <div class="mb-4">
                                <label asp-for="Email" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text" style="background: var(--accent1);">
                                        <i class="fas fa-envelope" style="color: var(--primary);"></i>
                                    </span>
                                    <input asp-for="Email" class="form-control" placeholder="seu@email.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Password" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text" style="background: var(--accent1);">
                                        <i class="fas fa-lock" style="color: var(--primary);"></i>
                                    </span>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Sua senha" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger alert-custom mb-4">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 1.2rem;"></i>
                                        <div>@ViewBag.Error</div>
                                    </div>
                                </div>
                            }

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary-custom pulse-glow btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i> Entrar
                                </button>
                            </div>

                            <div class="text-center mt-4 pt-3 border-top">
                                <p class="text-muted mb-0">
                                    Não tem conta?
                                    <a asp-controller="CreateAccount" asp-action="Register" class="fw-semibold" style="color: var(--primary);">
                                        Cadastre-se aqui
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Index.cshtml - Adicione esta seção após a validação -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-custom mb-4">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 1.2rem;"></i>
                <div>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            </div>
        </div>
    } 
</section>

<style>
    .feature-icon-sm {
        width: 60px;
        height: 60px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        font-size: 1.5rem;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}