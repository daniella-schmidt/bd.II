@model IEnumerable<EFAereoNuvem.Models.Airplane>

@{
    ViewData["Title"] = "Aeronaves";
}

<!-- Hero Section -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8" data-aos="fade-right">
                <div class="d-inline-flex align-items-center px-3 py-2 rounded-pill mb-3"
                     style="background: linear-gradient(135deg, var(--accent3), var(--accent2)); color: white;">
                    <i class="fas fa-plane me-2"></i>
                    <span class="fw-semibold">Frota</span>
                </div>
                <h1 class="page-header mb-3">Gestão de Aeronaves</h1>
                <p class="lead text-muted mb-4">Gerencie toda a frota de aeronaves do sistema</p>

                <div class="d-flex flex-wrap gap-3">
                    <a asp-action="Create" class="btn btn-primary-custom pulse-glow">
                        <i class="bi bi-plus-circle me-2"></i> Nova Aeronave
                    </a>
                </div>
            </div>
            <div class="col-lg-4 text-center" data-aos="fade-left" data-aos-delay="200">
                <div class="floating">
                    <i class="fas fa-plane" style="font-size: 8rem; color: var(--accent2); opacity: 0.7;"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="0">
                <div class="stat-card">
                    <div class="feature-icon">
                        <i class="fas fa-plane"></i>
                    </div>
                    <h3 class="fw-bold" style="color: var(--primary);">@Model?.Count()</h3>
                    <p class="text-muted mb-0">Total de Aeronaves</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="100">
                <div class="stat-card">
                    <div class="feature-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 class="fw-bold" style="color: var(--accent2);">@(Model?.Sum(a => a.Capacity) ?? 0)</h3>
                    <p class="text-muted mb-0">Capacidade Total</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="200">
                <div class="stat-card">
                    <div class="feature-icon">
                        <i class="fas fa-route"></i>
                    </div>
                    <h3 class="fw-bold" style="color: var(--secondary);">@(Model?.Sum(a => a.Flights?.Count ?? 0))</h3>
                    <p class="text-muted mb-0">Voos Programados</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="300">
                <div class="stat-card">
                    <div class="feature-icon">
                        <i class="fas fa-sync"></i>
                    </div>
                    <h3 class="fw-bold" style="color: var(--primary);">Ativo</h3>
                    <p class="text-muted mb-0">Sistema Online</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="py-5">
    <div class="container">
        <!-- Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-custom alert-dismissible fade show mb-4" role="alert" data-aos="fade-up">
                <div class="d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-3" style="font-size: 1.5rem;"></i>
                    <div class="flex-grow-1">
                        <h6 class="alert-heading mb-1">Sucesso!</h6>
                        <p class="mb-0">@TempData["SuccessMessage"]</p>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-custom alert-dismissible fade show mb-4" role="alert" data-aos="fade-up">
                <div class="d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 1.5rem;"></i>
                    <div class="flex-grow-1">
                        <h6 class="alert-heading mb-1">Erro!</h6>
                        <p class="mb-0">@TempData["ErrorMessage"]</p>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        <!-- Aeronaves Table -->
        @if (Model != null && Model.Any())
        {
            <div class="card" data-aos="fade-up" data-aos-delay="200">
                <div class="card-header" style="background: linear-gradient(135deg, var(--primary), var(--secondary));">
                    <h5 class="card-title mb-0 text-white">
                        <i class="fas fa-list me-2"></i>Lista de Aeronaves
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-custom table-hover mb-0">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-qrcode me-2"></i>Prefixo</th>
                                    <th><i class="fas fa-plane me-2"></i>Tipo</th>
                                    <th><i class="fas fa-users me-2"></i>Capacidade</th>
                                    <th><i class="fas fa-route me-2"></i>Voos</th>
                                    <th class="text-center"><i class="fas fa-cogs me-2"></i>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var airplane in Model)
                                {
                                    <tr>
                                        <td class="fw-bold" style="color: var(--primary);">@airplane.Prefix</td>
                                        <td>@airplane.Type</td>
                                        <td>
                                            <span class="badge badge-custom">@airplane.Capacity passageiros</span>
                                        </td>
                                        <td>
                                            <span class="badge" style="background: linear-gradient(135deg, var(--accent2), var(--accent3)); color: white;">
                                                @airplane.Flights?.Count voos
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@airplane.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" title="Excluir"
                                                        data-bs-toggle="modal" data-bs-target="#deleteModal"
                                                        data-airplane-id="@airplane.Id" data-airplane-prefix="@airplane.Prefix">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card text-center py-5" data-aos="fade-up">
                <div class="card-body">
                    <div class="floating mb-4">
                        <i class="fas fa-plane-slash" style="font-size: 4rem; color: var(--accent2);"></i>
                    </div>
                    <h4 style="color: var(--primary);">Nenhuma aeronave cadastrada</h4>
                    <p class="text-muted mb-4">Comece cadastrando uma nova aeronave no sistema</p>
                    <a asp-action="Create" class="btn btn-primary-custom">
                        <i class="bi bi-plus-circle me-2"></i> Cadastrar Primeira Aeronave
                    </a>
                </div>
            </div>
        }
    </div>
</section>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, var(--primary), var(--secondary));">
                <h5 class="modal-title text-white">
                    <i class="bi bi-exclamation-triangle me-2"></i> Confirmar Exclusão
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning alert-custom mb-4">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-info-circle-fill me-3" style="color: var(--accent2);"></i>
                        <div>
                            <strong>Atenção!</strong> Esta ação não pode ser desfeita.
                        </div>
                    </div>
                </div>
                <p class="mb-0">Tem certeza que deseja excluir a aeronave <strong id="airplanePrefix" style="color: var(--primary);"></strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i> Cancelar
                </button>
                <form id="deleteForm" method="post" asp-action="Delete">
                    <input type="hidden" id="airplaneId" name="id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i> Confirmar Exclusão
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Delete modal
        var deleteModal = document.getElementById('deleteModal');
        if (deleteModal) {
            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var airplaneId = button.getAttribute('data-airplane-id');
                var airplanePrefix = button.getAttribute('data-airplane-prefix');

                document.getElementById('airplanePrefix').textContent = airplanePrefix;
                document.getElementById('airplaneId').value = airplaneId;
            });
        }
    </script>
}