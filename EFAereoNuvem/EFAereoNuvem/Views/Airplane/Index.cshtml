@model IEnumerable<EFAereoNuvem.Models.Airplane>

@{
    ViewData["Title"] = "Aeronaves";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nova Aeronave
            </a>
        </div>
    </div>

    <!-- Mensagens -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tabela de Aeronaves -->
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Prefixo</th>
                        <th>Tipo</th>
                        <th>Capacidade</th>
                        <th>Voos</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var airplane in Model)
                    {
                        <tr>
                            <td>@airplane.Prefix</td>
                            <td>@airplane.Type</td>
                            <td>@airplane.Capacity passageiros</td>
                            <td>
                                <span class="badge bg-info">@airplane.Flights?.Count voos</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@airplane.Id" class="btn btn-sm btn-warning" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger" title="Excluir"
                                            data-bs-toggle="modal" data-bs-target="#deleteModal"
                                            data-airplane-id="@airplane.Id" data-airplane-prefix="@airplane.Prefix">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Nenhuma aeronave cadastrada.
        </div>
    }
</div>

<!-- Modal de Exclusão -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Excluir Aeronave</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir a aeronave <strong id="airplanePrefix"></strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="deleteForm" method="post" asp-action="Delete">
                    <input type="hidden" id="airplaneId" name="id" />
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Modal de exclusão
        var deleteModal = document.getElementById('deleteModal');
        if (deleteModal) {
            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var airplaneId = button.getAttribute('data-airplane-id');
                var airplanePrefix = button.getAttribute('data-airplane-prefix');

                document.getElementById('airplanePrefix').textContent = airplanePrefix;
                document.getElementById('airplaneId').value = airplaneId;
            });
        }
    </script>
}