@model EFAereoNuvem.Models.Airplane

@{
    ViewData["Title"] = "Nova Aeronave";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-airplane"></i> Nova Aeronave</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Prefix" class="form-label">Prefixo *</label>
                            <input asp-for="Prefix" class="form-control" placeholder="Ex: PRABC" maxlength="5" />
                            <span asp-validation-for="Prefix" class="text-danger"></span>
                            <small class="text-muted">Código único de identificação da aeronave (5 caracteres)</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Tipo *</label>
                            <input asp-for="Type" class="form-control" placeholder="Ex: Boeing 737, Airbus A320" maxlength="50" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Capacity" class="form-label">Capacidade *</label>
                            <input asp-for="Capacity" type="number" class="form-control" placeholder="Ex: 180" min="1" max="1000" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                            <small class="text-muted">Número máximo de passageiros</small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Cadastrar Aeronave</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}