@* Views/ClientDashboard/ReservationConfirmation.cshtml *@
@{
    ViewData["Title"] = "Reserva Confirmada";
}

<section class="hero-section py-5">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-6" data-aos="fade-up">
                <div class="d-inline-flex align-items-center px-3 py-2 rounded-pill mb-4"
                     style="background: linear-gradient(135deg, var(--accent3), var(--accent2)); color: white;">
                    <i class="fas fa-check-circle me-2"></i>
                    <span class="fw-semibold">Sucesso!</span>
                </div>
                <h1 class="page-header mb-4">Reserva Confirmada!</h1>

                <div class="card">
                    <div class="card-body p-5 text-center">
                        <div class="mb-4">
                            <div class="floating bg-success rounded-circle d-inline-flex align-items-center justify-content-center"
                                 style="width: 100px; height: 100px;">
                                <i class="fas fa-check text-white" style="font-size: 2.5rem;"></i>
                            </div>
                        </div>

                        <h3 class="mb-3" style="color: var(--primary);">Reserva Efetuada!</h3>

                        <p class="text-muted mb-4">
                            Sua reserva foi confirmada com sucesso. Enviamos os detalhes para seu e-mail.
                        </p>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Próximos passos:</strong> Acesse "Minhas Reservas" para ver os detalhes completos.
                        </div>

                        <div class="d-grid gap-3 mt-4">
                            <a asp-controller="ClientDashboard" asp-action="Index" class="btn btn-primary-custom">
                                <i class="fas fa-plane me-2"></i> Ver Mais Voos
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary-custom">
                                <i class="fas fa-home me-2"></i> Página Inicial
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>