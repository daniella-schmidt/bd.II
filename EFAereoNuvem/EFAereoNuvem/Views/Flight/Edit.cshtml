@model EFAereoNuvem.Models.Flight

@{
    ViewData["Title"] = "Editar Voo";
}

<!-- Hero Section -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8" data-aos="fade-right">
                <div class="d-inline-flex align-items-center px-3 py-2 rounded-pill mb-3"
                     style="background: linear-gradient(135deg, var(--accent3), var(--accent2)); color: white;">
                    <i class="fas fa-edit me-2"></i>
                    <span class="fw-semibold">Edição</span>
                </div>
                <h1 class="page-header mb-3">Editar Voo</h1>
                <p class="lead text-muted mb-4">Atualize os dados do voo abaixo</p>
            </div>
            <div class="col-lg-4 text-center" data-aos="fade-left" data-aos-delay="200">
                <div class="floating">
                    <i class="fas fa-route" style="font-size: 8rem; color: var(--accent2); opacity: 0.7;"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Form Section -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card" data-aos="fade-up">
                    <div class="card-header" style="background: linear-gradient(135deg, var(--primary), var(--secondary));">
                        <h5 class="card-title mb-0 text-white">
                            <i class="fas fa-edit me-2"></i>Editar Dados do Voo
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Edit" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-custom mb-4"></div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="CodeFlight" class="form-label fw-semibold">Código do Voo</label>
                                    <div class="input-group">
                                        <span class="input-group-text" style="background: var(--accent1);">
                                            <i class="fas fa-qrcode" style="color: var(--primary);"></i>
                                        </span>
                                        <input asp-for="CodeFlight" class="form-control" readonly />
                                    </div>
                                    <small class="text-muted">Código não pode ser alterado</small>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="TypeFlight" class="form-label fw-semibold">Tipo de Voo *</label>
                                    <div class="input-group">
                                        <span class="input-group-text" style="background: var(--accent1);">
                                            <i class="fas fa-tag" style="color: var(--primary);"></i>
                                        </span>
                                        <select asp-for="TypeFlight" class="form-select" asp-items="Html.GetEnumSelectList<EFAereoNuvem.Models.Enum.TypeFlight>()">
                                            <option value="">Selecione...</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="TypeFlight" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label asp-for="Origin" class="form-label fw-semibold">Origem *</label>
                                    <div class="input-group">
                                        <span class="input-group-text" style="background: var(--accent1);">
                                            <i class="fas fa-plane-departure" style="color: var(--primary);"></i>
                                        </span>
                                        <input asp-for="Origin" class="form-control" placeholder="Ex: São Paulo (GRU)" maxlength="50" />
                                    </div>
                                    <span asp-validation-for="Origin" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Destination" class="form-label fw-semibold">Destino *</label>
                                    <div class="input-group">
                                        <span class="input-group-text" style="background: var(--accent1);">
                                            <i class="fas fa-plane-arrival" style="color: var(--primary);"></i>
                                        </span>
                                        <input asp-for="Destination" class="form-control" placeholder="Ex: Rio de Janeiro (GIG)" maxlength="50" />
                                    </div>
                                    <span asp-validation-for="Destination" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-4">
                                    <label asp-for="DateFlight" class="form-label fw-semibold">Data do Voo *</label>
                                    <div class="input-group">
                                        <span class="input-group-text" style="background: var(--accent1);">
                                            <i class="fas fa-calendar" style="color: var(--primary);"></i>
                                        </span>
                                        <input asp-for="DateFlight" type="date" class="form-control" />
                                    </div>
                                    <span asp-validation-for="DateFlight" class="text-danger small"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Departure" class="form-label fw-semibold">Partida *</label>
                                    <div class="input-group">
                                        <span class="input-group-text" style="background: var(--accent1);">
                                            <i class="fas fa-clock" style="color: var(--primary);"></i>
                                        </span>
                                        <input asp-for="Departure" type="time" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Departure" class="text-danger small"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Arrival" class="form-label fw-semibold">Chegada *</label>
                                    <div class="input-group">
                                        <span class="input-group-text" style="background: var(--accent1);">
                                            <i class="fas fa-clock" style="color: var(--primary);"></i>
                                        </span>
                                        <input asp-for="Arrival" type="time" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Arrival" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label asp-for="Duration" class="form-label fw-semibold">Duração (horas) *</label>
                                    <div class="input-group">
                                        <span class="input-group-text" style="background: var(--accent1);">
                                            <i class="fas fa-hourglass" style="color: var(--primary);"></i>
                                        </span>
                                        <input asp-for="Duration" type="number" step="0.1" class="form-control" placeholder="Ex: 1.5" />
                                    </div>
                                    <span asp-validation-for="Duration" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="AirplaneId" class="form-label fw-semibold">Aeronave *</label>
                                    <div class="input-group">
                                        <span class="input-group-text" style="background: var(--accent1);">
                                            <i class="fas fa-plane" style="color: var(--primary);"></i>
                                        </span>
                                        <select asp-for="AirplaneId" class="form-select" asp-items="ViewBag.Airplanes">
                                            <option value="">Selecione uma aeronave...</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="AirplaneId" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="row g-3 mt-2">
                                <div class="col-12">
                                    <div class="form-check">
                                        <input asp-for="ExistScale" class="form-check-input" id="existScale" />
                                        <label class="form-check-label fw-semibold" for="existScale">
                                            Possui Escala?
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <!-- Botões -->
                            <div class="d-flex flex-wrap gap-3 justify-content-end pt-4 mt-4 border-top">
                                <a asp-action="Index" class="btn btn-secondary-custom">
                                    <i class="bi bi-x-circle me-2"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary-custom pulse-glow">
                                    <i class="bi bi-save me-2"></i> Atualizar Voo
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}