@model IEnumerable<EFAereoNuvem.Models.Flight>

@{
    ViewData["Title"] = "Voos";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Novo Voo
            </a>
        </div>
    </div>

    <!-- Mensagens -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tabela de Voos -->
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Código</th>
                        <th>Origem</th>
                        <th>Destino</th>
                        <th>Data</th>
                        <th>Partida</th>
                        <th>Chegada</th>
                        <th>Tipo</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var flight in Model)
                    {
                        <tr>
                            <td>@flight.CodeFlight</td>
                            <td>@flight.Origin</td>
                            <td>@flight.Destination</td>
                            <td>@flight.DateFlight.ToString("dd/MM/yyyy")</td>
                            <td>@flight.Departure.ToString("HH:mm")</td>
                            <td>@flight.Arrival.ToString("HH:mm")</td>
                            <td>
                                <span class="badge bg-@(flight.TypeFlight == EFAereoNuvem.Models.Enum.TypeFlight.National ? "primary" :
                                                                                            flight.TypeFlight == EFAereoNuvem.Models.Enum.TypeFlight.International ? "success" : "info")">
                            @flight.TypeFlight
                        </span>
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@flight.Id" class="btn btn-sm btn-info" title="Detalhes">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@flight.Id" class="btn btn-sm btn-warning" title="Editar">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button type="button" class="btn btn-sm btn-danger" title="Excluir"
                                    data-bs-toggle="modal" data-bs-target="#deleteModal"
                                    data-flight-id="@flight.Id" data-flight-code="@flight.CodeFlight">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
                                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Nenhum voo cadastrado.
        </div>
    }
</div>

<!-- Modal de Exclusão -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Excluir Voo</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir o voo <strong id="flightCode"></strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="deleteForm" method="post" asp-action="Delete">
                    <input type="hidden" id="flightId" name="id" />
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Modal de exclusão
        var deleteModal = document.getElementById('deleteModal');
        if (deleteModal) {
            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var flightId = button.getAttribute('data-flight-id');
                var flightCode = button.getAttribute('data-flight-code');

                document.getElementById('flightCode').textContent = flightCode;
                document.getElementById('flightId').value = flightId;
            });
        }
    </script>
}