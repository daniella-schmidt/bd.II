@model IEnumerable<EFAereoNuvem.Models.Flight>

@{
    ViewData["Title"] = "Voos";
}

<!-- Hero Section -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8" data-aos="fade-right">
                <div class="d-inline-flex align-items-center px-3 py-2 rounded-pill mb-3"
                     style="background: linear-gradient(135deg, var(--accent3), var(--accent2)); color: white;">
                    <i class="fas fa-route me-2"></i>
                    <span class="fw-semibold">Operações</span>
                </div>
                <h1 class="page-header mb-3">Gestão de Voos</h1>
                <p class="lead text-muted mb-4">Gerencie todos os voos programados no sistema</p>

                <div class="d-flex flex-wrap gap-3">
                    <a asp-action="Create" class="btn btn-primary-custom pulse-glow">
                        <i class="bi bi-plus-circle me-2"></i> Novo Voo
                    </a>
                </div>
            </div>
            <div class="col-lg-4 text-center" data-aos="fade-left" data-aos-delay="200">
                <div class="floating">
                    <i class="fas fa-route" style="font-size: 8rem; color: var(--accent2); opacity: 0.7;"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="0">
                <div class="stat-card">
                    <div class="feature-icon">
                        <i class="fas fa-plane"></i>
                    </div>
                    <h3 class="fw-bold" style="color: var(--primary);">@Model?.Count()</h3>
                    <p class="text-muted mb-0">Total de Voos</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="100">
                <div class="stat-card">
                    <div class="feature-icon">
                        <i class="fas fa-play-circle"></i>
                    </div>
                    <h3 class="fw-bold" style="color: var(--accent2);">@(Model?.Count(f => f.Departure > DateTime.Now) ?? 0)</h3>
                    <p class="text-muted mb-0">Voos Futuros</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="200">
                <div class="stat-card">
                    <div class="feature-icon">
                        <i class="fas fa-exchange-alt"></i>
                    </div>
                    <h3 class="fw-bold" style="color: var(--secondary);">@(Model?.Count(f => f.ExistScale) ?? 0)</h3>
                    <p class="text-muted mb-0">Com Escalas</p>
                </div>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="300">
                <div class="stat-card">
                    <div class="feature-icon">
                        <i class="fas fa-sync"></i>
                    </div>
                    <h3 class="fw-bold" style="color: var(--primary);">Ativo</h3>
                    <p class="text-muted mb-0">Sistema Online</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="py-5">
    <div class="container">
        <!-- Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-custom alert-dismissible fade show mb-4" role="alert" data-aos="fade-up">
                <div class="d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-3" style="font-size: 1.5rem;"></i>
                    <div class="flex-grow-1">
                        <h6 class="alert-heading mb-1">Sucesso!</h6>
                        <p class="mb-0">@TempData["SuccessMessage"]</p>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-custom alert-dismissible fade show mb-4" role="alert" data-aos="fade-up">
                <div class="d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 1.5rem;"></i>
                    <div class="flex-grow-1">
                        <h6 class="alert-heading mb-1">Erro!</h6>
                        <p class="mb-0">@TempData["ErrorMessage"]</p>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        <!-- Voos Table -->
        @if (Model != null && Model.Any())
        {
            <div class="card" data-aos="fade-up" data-aos-delay="200">
                <div class="card-header" style="background: linear-gradient(135deg, var(--primary), var(--secondary));">
                    <h5 class="card-title mb-0 text-white">
                        <i class="fas fa-list me-2"></i>Lista de Voos
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-custom table-hover mb-0">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-qrcode me-2"></i>Código</th>
                                    <th><i class="fas fa-plane-departure me-2"></i>Origem</th>
                                    <th><i class="fas fa-plane-arrival me-2"></i>Destino</th>
                                    <th><i class="fas fa-calendar me-2"></i>Data</th>
                                    <th><i class="fas fa-clock me-2"></i>Partida</th>
                                    <th><i class="fas fa-clock me-2"></i>Chegada</th>
                                    <th><i class="fas fa-tag me-2"></i>Tipo</th>
                                    <th class="text-center"><i class="fas fa-cogs me-2"></i>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var flight in Model)
                                {
                                    <tr>
                                        <td class="fw-bold" style="color: var(--primary);">@flight.CodeFlight</td>
                                        <td>@flight.Origin</td>
                                        <td>@flight.Destination</td>
                                        <td>@flight.DateFlight.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge badge-custom">@flight.Departure.ToString("HH:mm")</span>
                                        </td>
                                        <td>
                                            <span class="badge" style="background: linear-gradient(135deg, var(--accent2), var(--accent3)); color: white;">
                                                @flight.Arrival.ToString("HH:mm")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge" style="background: var(--accent1); color: var(--dark);">
                                                @flight.TypeFlight
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@flight.Id" class="btn btn-sm btn-outline-info" title="Detalhes">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@flight.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" title="Excluir"
                                                        data-bs-toggle="modal" data-bs-target="#deleteModal"
                                                        data-flight-id="@flight.Id" data-flight-code="@flight.CodeFlight">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card text-center py-5" data-aos="fade-up">
                <div class="card-body">
                    <div class="floating mb-4">
                        <i class="fas fa-plane-arrival" style="font-size: 4rem; color: var(--accent2);"></i>
                    </div>
                    <h4 style="color: var(--primary);">Nenhum voo cadastrado</h4>
                    <p class="text-muted mb-4">Comece programando um novo voo</p>
                    <a asp-action="Create" class="btn btn-primary-custom">
                        <i class="bi bi-plus-circle me-2"></i> Programar Primeiro Voo
                    </a>
                </div>
            </div>
        }
    </div>
</section>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, var(--primary), var(--secondary));">
                <h5 class="modal-title text-white">
                    <i class="bi bi-exclamation-triangle me-2"></i> Excluir Voo
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir o voo <strong id="flightCode" style="color: var(--primary);"></strong>?</p>
                <div class="alert alert-warning alert-custom mt-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-info-circle-fill me-3" style="color: var(--accent2);"></i>
                        <div>
                            <small>Esta ação afetará todas as reservas relacionadas a este voo.</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i> Cancelar
                </button>
                <form id="deleteForm" method="post" asp-action="Delete">
                    <input type="hidden" id="flightId" name="id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i> Excluir
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Modal de exclusão
        var deleteModal = document.getElementById('deleteModal');
        if (deleteModal) {
            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var flightId = button.getAttribute('data-flight-id');
                var flightCode = button.getAttribute('data-flight-code');

                document.getElementById('flightCode').textContent = flightCode;
                document.getElementById('flightId').value = flightId;
            });
        }
    </script>
}