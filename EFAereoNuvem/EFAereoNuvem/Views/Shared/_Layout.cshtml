<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Areo Nuvem</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- AOS Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary: #5f9b8a;
            --secondary: #8db9ad;
            --accent1: #bdd6cf;
            --accent2: #ba7689;
            --accent3: #ffc9d8;
            --light: #ffffff;
            --dark: #0c0f14;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #fbfcff 0%, #f5f7fd 60%, #eef2f7 100%);
            color: var(--dark);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .gradient-surface {
            background-image: radial-gradient(1200px 600px at 10% -10%, rgba(95, 155, 138, 0.15), transparent 60%), radial-gradient(900px 500px at 90% 10%, rgba(186, 118, 137, 0.12), transparent 60%), linear-gradient(180deg, #fbfcff 0%, #f5f7fd 60%, #eef2f7 100%);
        }

        .navbar {
            backdrop-filter: blur(16px) saturate(130%);
            background: rgba(255, 255, 255, 0.8) !important;
            border-bottom: 1px solid rgba(255, 255, 255, 0.4);
        }

        .navbar-brand {
            font-weight: 900;
            font-size: 1.5rem;
            background: linear-gradient(135deg, var(--primary), var(--accent2));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .nav-link {
            font-weight: 500;
            color: var(--dark) !important;
            transition: all 0.3s ease;
            border-radius: 10px;
            margin: 0 4px;
            padding: 8px 16px !important;
        }

            .nav-link:hover {
                background: rgba(95, 155, 138, 0.1);
                transform: translateY(-2px);
            }

        main {
            flex: 1 0 auto;
            width: 100%;
        }

        footer {
            flex-shrink: 0;
            margin-top: auto;
        }

        .card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(13, 18, 28, 0.12);
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.8);
            border: 1px solid rgba(255, 255, 255, 0.3);
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 50px rgba(13, 18, 28, 0.15);
            }

        .btn-primary-custom {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border: none;
            color: white;
            font-weight: 600;
            border-radius: 12px;
            padding: 12px 24px;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(95, 155, 138, 0.3);
        }

            .btn-primary-custom:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(95, 155, 138, 0.4);
                color: white;
            }

        .btn-secondary-custom {
            background: linear-gradient(135deg, var(--accent2), var(--accent3));
            border: none;
            color: white;
            font-weight: 600;
            border-radius: 12px;
            padding: 12px 24px;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(186, 118, 137, 0.3);
        }

            .btn-secondary-custom:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(186, 118, 137, 0.4);
                color: white;
            }

        .table-custom {
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 25px rgba(13, 18, 28, 0.1);
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.8);
        }

            .table-custom thead {
                background: linear-gradient(135deg, var(--primary), var(--secondary));
                color: white;
            }

            .table-custom th {
                border: none;
                padding: 16px;
                font-weight: 600;
            }

            .table-custom td {
                border-color: rgba(0,0,0,0.05);
                padding: 16px;
                vertical-align: middle;
            }

        .alert-custom {
            border: none;
            border-radius: 16px;
            box-shadow: 0 5px 20px rgba(13, 18, 28, 0.1);
            backdrop-filter: blur(10px);
        }

        .form-control {
            border-radius: 12px;
            border: 2px solid rgba(95, 155, 138, 0.2);
            padding: 12px 16px;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.8);
        }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 0.2rem rgba(95, 155, 138, 0.15);
                background: rgba(255, 255, 255, 0.9);
            }

        .floating {
            animation: floating 3s ease-in-out infinite;
        }

        .pulse-glow {
            animation: pulse-glow 2s infinite;
        }

        .badge-custom {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            border-radius: 20px;
            padding: 8px 16px;
            font-weight: 600;
            border: none;
        }

        .modal-content {
            border-radius: 20px;
            border: none;
            box-shadow: 0 25px 50px rgba(13, 18, 28, 0.2);
            backdrop-filter: blur(20px);
            background: rgba(255, 255, 255, 0.95);
        }

        .hero-section {
            background: linear-gradient(135deg, #fbfcff 0%, #f5f7fd 100%);
            border-radius: 0 0 40px 40px;
            position: relative;
            overflow: hidden;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: radial-gradient(800px 800px at 20% 30%, rgba(95, 155, 138, 0.15), transparent 60%), radial-gradient(600px 600px at 80% 70%, rgba(186, 118, 137, 0.12), transparent 60%);
                pointer-events: none;
            }

        .page-header {
            font-weight: 900;
            background: linear-gradient(135deg, var(--primary), var(--accent2));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 2.5rem;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.6);
            backdrop-filter: blur(16px);
            border: 1px solid rgba(255, 255, 255, 0.4);
            border-radius: 20px;
            padding: 2rem;
            text-align: center;
            transition: all 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                background: rgba(255, 255, 255, 0.8);
            }

        .feature-icon {
            width: 80px;
            height: 80px;
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            font-size: 2rem;
        }

        .footer {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            padding: 2rem 0;
            margin-top: auto;
        }

            .footer a {
                color: rgba(255, 255, 255, 0.8);
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .footer a:hover {
                    color: white;
                }
    </style>
</head>
<body class="gradient-surface">
    <!-- Navbar -->
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-light py-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-plane me-2"></i>Areo Nuvem
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Client" asp-action="Index">
                                <i class="fas fa-users me-1"></i>Clientes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Airplane" asp-action="Index">
                                <i class="fas fa-plane me-1"></i>Aeronaves
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Flight" asp-action="Index">
                                <i class="fas fa-route me-1"></i>Voos
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <h5 class="mb-2">
                        <i class="fas fa-plane me-2"></i>EFAereoNuvem
                    </h5>
                    <p class="mb-0 opacity-75">Sistema de gerenciamento aeronáutico moderno e eficiente</p>
                </div>
                <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                    <p class="mb-0 opacity-75">
                        &copy; 2025 - Aereo Nuvem 
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Initialize AOS
        document.addEventListener('DOMContentLoaded', function() {
            AOS.init({
                duration: 800,
                easing: 'ease-out-quad',
                once: true,
                offset: 50
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>