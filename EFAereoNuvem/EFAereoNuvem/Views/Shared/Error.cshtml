@model ErrorViewModel
@{
    ViewData["Title"] = "Erro";
}

<!-- Hero Section -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8" data-aos="fade-up">
                <div class="d-inline-flex align-items-center px-3 py-2 rounded-pill mb-4"
                     style="background: linear-gradient(135deg, #dc3545, #c82333); color: white;">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <span class="fw-semibold">Erro</span>
                </div>
                <h1 class="page-header mb-4" style="background: linear-gradient(135deg, #dc3545, #c82333); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                    Ocorreu um Erro
                </h1>
                <p class="lead text-muted mb-5">Desculpe, ocorreu um erro ao processar sua solicitação.</p>
            </div>
        </div>
    </div>
</section>

<!-- Error Content -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card" data-aos="fade-up">
                    <div class="card-header" style="background: linear-gradient(135deg, #dc3545, #c82333);">
                        <h5 class="card-title mb-0 text-white text-center">
                            <i class="fas fa-bug me-2"></i>Detalhes do Erro
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            <i class="fas fa-exclamation-circle" style="font-size: 4rem; color: #dc3545;"></i>
                        </div>

                        <h4 class="text-center mb-4" style="color: #dc3545;">Algo deu errado...</h4>

                        @if (Model.ShowRequestId)
                        {
                            <div class="alert alert-info alert-custom mb-4">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-info-circle me-3" style="color: var(--primary);"></i>
                                    <div>
                                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="alert alert-warning alert-custom mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-lightbulb me-3" style="color: var(--accent2);"></i>
                                <div>
                                    <strong>Desenvolvimento:</strong>
                                    Para ver detalhes completos do erro, ative o modo Development no ambiente.
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mt-4">
                            <div class="col-md-6">
                                <div class="d-grid">
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary-custom">
                                        <i class="fas fa-home me-2"></i> Página Inicial
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-grid">
                                    <button onclick="history.back()" class="btn btn-secondary-custom">
                                        <i class="fas fa-arrow-left me-2"></i> Voltar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>