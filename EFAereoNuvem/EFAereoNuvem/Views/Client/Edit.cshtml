@model EFAereoNuvem.Models.Client

@{
    ViewData["Title"] = "Editar Cliente";
}

<!-- Hero Section -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8" data-aos="fade-right">
                <div class="d-inline-flex align-items-center px-3 py-2 rounded-pill mb-3"
                     style="background: linear-gradient(135deg, var(--accent3), var(--accent2)); color: white;">
                    <i class="fas fa-edit me-2"></i>
                    <span class="fw-semibold">Edição</span>
                </div>
                <h1 class="page-header mb-3">Editar Cliente</h1>
                <p class="lead text-muted mb-4">Atualize os dados do cliente abaixo</p>
            </div>
            <div class="col-lg-4 text-center" data-aos="fade-left" data-aos-delay="200">
                <div class="floating">
                    <i class="fas fa-user-edit" style="font-size: 8rem; color: var(--accent2); opacity: 0.7;"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Form Section -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card" data-aos="fade-up">
                    <div class="card-header" style="background: linear-gradient(135deg, var(--primary), var(--secondary));">
                        <h5 class="card-title mb-0 text-white">
                            <i class="fas fa-user-edit me-2"></i>Editar Dados do Cliente
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Edit" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-custom mb-4"></div>

                            <!-- Dados Pessoais -->
                            <div class="mb-5">
                                <h5 class="border-bottom pb-3 mb-4" style="color: var(--primary);">
                                    <i class="fas fa-id-card me-2"></i>Dados Pessoais
                                </h5>

                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label asp-for="Name" class="form-label fw-semibold"></label>
                                        <div class="input-group">
                                            <span class="input-group-text" style="background: var(--accent1);">
                                                <i class="fas fa-user" style="color: var(--primary);"></i>
                                            </span>
                                            <input asp-for="Name" class="form-control" placeholder="Nome completo" />
                                        </div>
                                        <span asp-validation-for="Name" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Cpf" class="form-label fw-semibold"></label>
                                        <div class="input-group">
                                            <span class="input-group-text" style="background: var(--accent1);">
                                                <i class="fas fa-id-card" style="color: var(--primary);"></i>
                                            </span>
                                            <input asp-for="Cpf" class="form-control" placeholder="000.000.000-00" maxlength="11" readonly />
                                        </div>
                                        <span asp-validation-for="Cpf" class="text-danger small"></span>
                                        <small class="text-muted">CPF não pode ser alterado.</small>
                                    </div>
                                </div>

                                <div class="row g-3 mt-2">
                                    <div class="col-md-4">
                                        <label asp-for="BornDate" class="form-label fw-semibold"></label>
                                        <div class="input-group">
                                            <span class="input-group-text" style="background: var(--accent1);">
                                                <i class="fas fa-calendar" style="color: var(--primary);"></i>
                                            </span>
                                            <input asp-for="BornDate" type="date" class="form-control" />
                                        </div>
                                        <span asp-validation-for="BornDate" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="Email" class="form-label fw-semibold"></label>
                                        <div class="input-group">
                                            <span class="input-group-text" style="background: var(--accent1);">
                                                <i class="fas fa-envelope" style="color: var(--primary);"></i>
                                            </span>
                                            <input asp-for="Email" type="email" class="form-control" placeholder="email@exemplo.com" />
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="Phone" class="form-label fw-semibold"></label>
                                        <div class="input-group">
                                            <span class="input-group-text" style="background: var(--accent1);">
                                                <i class="fas fa-phone" style="color: var(--primary);"></i>
                                            </span>
                                            <input asp-for="Phone" class="form-control" placeholder="(00) 00000-0000" maxlength="15" />
                                        </div>
                                        <span asp-validation-for="Phone" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Endereço Atual -->
                            <div class="mb-5">
                                <h5 class="border-bottom pb-3 mb-4" style="color: var(--primary);">
                                    <i class="fas fa-map-marker-alt me-2"></i>Endereço Atual
                                </h5>

                                <input type="hidden" asp-for="CurrentAdressId" />
                                <input type="hidden" asp-for="CurrentAdress.Id" />

                                <div class="row g-3">
                                    <div class="col-md-8">
                                        <label asp-for="CurrentAdress.Street" class="form-label fw-semibold"></label>
                                        <div class="input-group">
                                            <span class="input-group-text" style="background: var(--accent1);">
                                                <i class="fas fa-road" style="color: var(--primary);"></i>
                                            </span>
                                            <input asp-for="CurrentAdress.Street" class="form-control" placeholder="Rua, Avenida..." />
                                        </div>
                                        <span asp-validation-for="CurrentAdress.Street" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="CurrentAdress.Number" class="form-label fw-semibold"></label>
                                        <div class="input-group">
                                            <span class="input-group-text" style="background: var(--accent1);">
                                                <i class="fas fa-hashtag" style="color: var(--primary);"></i>
                                            </span>
                                            <input asp-for="CurrentAdress.Number" class="form-control" placeholder="Número" />
                                        </div>
                                        <span asp-validation-for="CurrentAdress.Number" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="row g-3 mt-2">
                                    <div class="col-12">
                                        <label asp-for="CurrentAdress.Complement" class="form-label fw-semibold"></label>
                                        <div class="input-group">
                                            <span class="input-group-text" style="background: var(--accent1);">
                                                <i class="fas fa-building" style="color: var(--primary);"></i>
                                            </span>
                                            <input asp-for="CurrentAdress.Complement" class="form-control" placeholder="Apto, Bloco, Sala..." />
                                        </div>
                                    </div>
                                </div>

                                <div class="row g-3 mt-2">
                                    <div class="col-md-5">
                                        <label asp-for="CurrentAdress.City" class="form-label fw-semibold"></label>
                                        <div class="input-group">
                                            <span class="input-group-text" style="background: var(--accent1);">
                                                <i class="fas fa-city" style="color: var(--primary);"></i>
                                            </span>
                                            <input asp-for="CurrentAdress.City" class="form-control" placeholder="Cidade" />
                                        </div>
                                        <span asp-validation-for="CurrentAdress.City" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-3">
                                        <label asp-for="CurrentAdress.State" class="form-label fw-semibold"></label>
                                        <div class="input-group">
                                            <span class="input-group-text" style="background: var(--accent1);">
                                                <i class="fas fa-map" style="color: var(--primary);"></i>
                                            </span>
                                            <input asp-for="CurrentAdress.State" class="form-control" placeholder="UF" maxlength="2" />
                                        </div>
                                        <span asp-validation-for="CurrentAdress.State" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="CurrentAdress.Cep" class="form-label fw-semibold"></label>
                                        <div class="input-group">
                                            <span class="input-group-text" style="background: var(--accent1);">
                                                <i class="fas fa-mail-bulk" style="color: var(--primary);"></i>
                                            </span>
                                            <input asp-for="CurrentAdress.Cep" class="form-control" placeholder="00000-000" maxlength="10" />
                                        </div>
                                        <span asp-validation-for="CurrentAdress.Cep" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="row g-3 mt-2">
                                    <div class="col-12">
                                        <label asp-for="CurrentAdress.Country" class="form-label fw-semibold"></label>
                                        <div class="input-group">
                                            <span class="input-group-text" style="background: var(--accent1);">
                                                <i class="fas fa-flag" style="color: var(--primary);"></i>
                                            </span>
                                            <input asp-for="CurrentAdress.Country" class="form-control" value="Brasil" />
                                        </div>
                                        <span asp-validation-for="CurrentAdress.Country" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Botões -->
                            <div class="d-flex flex-wrap gap-3 justify-content-end pt-4 border-top">
                                <a asp-action="Index" class="btn btn-secondary-custom">
                                    <i class="bi bi-x-circle me-2"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary-custom pulse-glow">
                                    <i class="bi bi-save me-2"></i> Atualizar Cliente
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Máscaras para Telefone e CEP
        document.querySelector('[name="Phone"]')?.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 11) {
                if (value.length <= 2) {
                    e.target.value = value;
                } else if (value.length <= 7) {
                    e.target.value = `(${value.slice(0,2)}) ${value.slice(2)}`;
                } else {
                    e.target.value = `(${value.slice(0,2)}) ${value.slice(2,7)}-${value.slice(7,11)}`;
                }
            }
        });

        document.querySelector('[name="CurrentAdress.Cep"]')?.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 8) {
                if (value.length > 5) {
                    e.target.value = `${value.slice(0,5)}-${value.slice(5)}`;
                } else {
                    e.target.value = value;
                }
            }
        });

        // Validação de idade
        document.querySelector('[name="BornDate"]')?.addEventListener('change', function(e) {
            const bornDate = new Date(e.target.value);
            const today = new Date();
            const minimumAge = new Date(today.getFullYear() - 18, today.getMonth(), today.getDate());

            if (bornDate > minimumAge) {
                alert('Cliente deve ter pelo menos 18 anos.');
                e.target.value = '';
            }
        });
    </script>
}