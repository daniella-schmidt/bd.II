@model IEnumerable<EFAereoNuvem.Models.Client>

@{
    ViewData["Title"] = ViewBag.PageTitle ?? "Lista de Clientes";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>@ViewData["Title"]</h2>
            @if (ViewBag.TotalClients != null)
            {
                <p class="text-muted">Total de clientes: @ViewBag.TotalClients</p>
            }
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Novo Cliente
            </a>
        </div>
    </div>

    <!-- Mensagens de Sucesso/Erro -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros e Busca -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Search" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Tipo de Busca</label>
                    <select name="searchType" class="form-select">
                        <option value="name">Nome</option>
                        <option value="cpf">CPF</option>
                        <option value="email">Email</option>
                        <option value="city">Cidade</option>
                        <option value="state">Estado</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Valor</label>
                    <input type="text" name="searchValue" class="form-control" placeholder="Digite para buscar..." required>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary w-100">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </form>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-sm btn-outline-primary">Todos</a>
                <a asp-action="WithReservations" class="btn btn-sm btn-outline-info">Com Reservas</a>
                <a asp-action="BirthdayMonth" class="btn btn-sm btn-outline-warning">Aniversariantes</a>
            </div>
        </div>
    </div>

    <!-- Tabela de Clientes -->
@if (Model != null && Model.Any())
{
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>CPF</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Telefone</th>
                        <th>Cidade</th>
                        <th>Status</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model)
                    {
                        <tr>
                            <td>@client.Cpf</td>
                            <td>@client.Name</td>
                            <td>@(client.Email ?? "-")</td>
                            <td>@(client.Phone ?? "-")</td>
                            <td>@client.CurrentAdress?.City</td>
                            <td>
                                @if (client.ClientStatus != null)
                                {
                                    <span class="badge bg-@(client.ClientStatus.Status == EFAereoNuvem.Models.Enum.Status.Gold ? "warning" :
                                                                                                                                   client.ClientStatus.Status == EFAereoNuvem.Models.Enum.Status.Silver ? "secondary" : "info")">
                            @client.ClientStatus.Status
                        </span>
                                                }
                                else
                                {
                                    <span class="badge bg-light text-dark">Padrão</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-sm btn-warning" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger" title="Excluir"
                                            data-bs-toggle="modal" data-bs-target="#deleteModal"
                                            data-client-id="@client.Id" data-client-name="@client.Name">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Modal de Confirmação de Exclusão -->
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="deleteModalLabel">
                            <i class="bi bi-exclamation-triangle"></i> Confirmar Exclusão
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="alert alert-warning">
                            <i class="bi bi-info-circle"></i>
                            <strong>Atenção!</strong> Esta ação não pode ser desfeita. Todos os dados relacionados serão permanentemente removidos.
                        </div>
                        <p>Tem certeza que deseja excluir o cliente <strong id="clientName"></strong>?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </button>
                        <form id="deleteForm" method="post" asp-action="Delete">
                            <input type="hidden" id="clientId" name="id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirmar Exclusão
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
}
@section Scripts {
        <script>
            // Auto-dismiss alerts após 5 segundos
            setTimeout(function() {
                var alerts = document.querySelectorAll('.alert');
                alerts.forEach(function(alert) {
                    var bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);

            // Modal de exclusão
            var deleteModal = document.getElementById('deleteModal');
            if (deleteModal) {
                deleteModal.addEventListener('show.bs.modal', function (event) {
                    var button = event.relatedTarget;
                    var clientId = button.getAttribute('data-client-id');
                    var clientName = button.getAttribute('data-client-name');

                    var modalTitle = deleteModal.querySelector('.modal-title');
                    var clientNameSpan = deleteModal.querySelector('#clientName');
                    var clientIdInput = deleteModal.querySelector('#clientId');

                    clientNameSpan.textContent = clientName;
                    clientIdInput.value = clientId;
                });
            }

            // Loading state no formulário de delete
            var deleteForm = document.getElementById('deleteForm');
            if (deleteForm) {
                deleteForm.addEventListener('submit', function() {
                    var submitButton = this.querySelector('button[type="submit"]');
                    submitButton.innerHTML = '<i class="bi bi-hourglass-split"></i> Excluindo...';
                    submitButton.disabled = true;
                });
            }
        </script>
}
