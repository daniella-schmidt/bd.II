@model EFAereoNuvem.Models.Client

@{
    ViewData["Title"] = "Novo Cliente";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus"></i> Cadastrar Novo Cliente
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Dados Pessoais -->
                        <h5 class="border-bottom pb-2 mb-3">Dados Pessoais</h5>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Nome completo" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Cpf" class="form-label"></label>
                                <input asp-for="Cpf" class="form-control" placeholder="000.000.000-00" maxlength="11" />
                                <span asp-validation-for="Cpf" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="BornDate" class="form-label"></label>
                                <input asp-for="BornDate" type="date" class="form-control" />
                                <span asp-validation-for="BornDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="email@exemplo.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Phone" class="form-label"></label>
                                <input asp-for="Phone" class="form-control" placeholder="(00) 00000-0000" maxlength="15" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Endereço Atual -->
                        <h5 class="border-bottom pb-2 mb-3 mt-4">Endereço Atual</h5>

                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="CurrentAdress.Street" class="form-label"></label>
                                <input asp-for="CurrentAdress.Street" class="form-control" placeholder="Rua, Avenida..." />
                                <span asp-validation-for="CurrentAdress.Street" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="CurrentAdress.Number" class="form-label"></label>
                                <input asp-for="CurrentAdress.Number" class="form-control" placeholder="Número" />
                                <span asp-validation-for="CurrentAdress.Number" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="CurrentAdress.Complement" class="form-label"></label>
                                <input asp-for="CurrentAdress.Complement" class="form-control" placeholder="Apto, Bloco, Sala..." />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-5">
                                <label asp-for="CurrentAdress.City" class="form-label"></label>
                                <input asp-for="CurrentAdress.City" class="form-control" placeholder="Cidade" />
                                <span asp-validation-for="CurrentAdress.City" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="CurrentAdress.State" class="form-label"></label>
                                <input asp-for="CurrentAdress.State" class="form-control" placeholder="UF" maxlength="2" />
                                <span asp-validation-for="CurrentAdress.State" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="CurrentAdress.Cep" class="form-label"></label>
                                <input asp-for="CurrentAdress.Cep" class="form-control" placeholder="00000-000" maxlength="10" />
                                <span asp-validation-for="CurrentAdress.Cep" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="CurrentAdress.Country" class="form-label"></label>
                                <input asp-for="CurrentAdress.Country" class="form-control" value="Brasil" />
                                <span asp-validation-for="CurrentAdress.Country" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Botões -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Salvar Cliente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Máscaras para CPF e Telefone
        document.querySelector('[name="Cpf"]').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            e.target.value = value;
        });

        document.querySelector('[name="Phone"]').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 11) {
                if (value.length <= 2) {
                    e.target.value = value;
                } else if (value.length <= 7) {
                    e.target.value = `(${value.slice(0,2)}) ${value.slice(2)}`;
                } else {
                    e.target.value = `(${value.slice(0,2)}) ${value.slice(2,7)}-${value.slice(7,11)}`;
                }
            }
        });

        document.querySelector('[name="CurrentAdress.Cep"]').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 8) {
                if (value.length > 5) {
                    e.target.value = `${value.slice(0,5)}-${value.slice(5)}`;
                } else {
                    e.target.value = value;
                }
            }
        });

        document.querySelector('[name="BornDate"]').addEventListener('change', function(e) {
            const bornDate = new Date(e.target.value);
            const today = new Date();
            const minimumAge = new Date(today.getFullYear() - 18, today.getMonth(), today.getDate());

            if (bornDate > minimumAge) {
                alert('Cliente deve ter pelo menos 18 anos.');
                e.target.value = '';
            }
        });
    </script>
}